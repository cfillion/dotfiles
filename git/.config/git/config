[commit]
gpgSign = true

[diff]
algorithm = histogram
submodule = log
wsErrorHighlight = all

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true

[include]
path = identity

[init]
defaultBranch = master

[log]
date = iso-local
showSignature = true

[pull]
ff = only

[push]
autoSetupRemote = true
default = current

[tag]
sort = -version:refname
