# vim: ft=zsh

compress()
{
  convert -strip -interlace Plane -quality 85% $*
}

feh()
{
  opts = ''
  if [ "$1" ]; then
    command feh $opts --start-at ./$1
  else
    command feh $opts
  fi
}

gem2ri()
{
  gem rdoc $* --ri --no-rdoc
}

lsfont()
{
  fc-list : family
}

myip()
{
  curl curlmyip.com
}

sprunge()
{
  curl -F 'sprunge=<-' http://sprunge.us
}

startx()
{
  [ $DISPLAY ] && return
  command startx
}

topdu()
{
  du -sh */ | sort -rh | less -NSFiX
}
