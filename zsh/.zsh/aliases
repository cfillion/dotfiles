# vim: ft=zsh

alias ..='cd ..'
alias ag="ag --color-line-number='0;93' --color-match='31;1' --smart-case"
alias bc='bc -lq'
alias cal='task calendar'
alias ccze='ccze -AC'
alias cp='cp -vi'
alias df='df -Th'
alias du='du -h'
alias grep='grep --color -i'
alias klick='klick -Pi'
alias lilypond='lilypond -dno-point-and-click'
alias ln='ln -vi'
alias ls='ls -Fhv --color=auto --group-directories-first'
alias mkdir='mkdir -pv'
alias mtr='mtr -rwb'
alias mv='mv -vi'
alias netjack='jackd -R -d netone'
alias ngrep='ngrep -q'
alias pdflatex='pdflatex -halt-on-error -file-line-error'
alias rerun='rerun -b --no-notify'
alias rm='rm -vI'
alias rmdir='rmdir -v'
alias sgdb='sudo -E capsh --caps="cap_setuid,cap_setgid+ep cap_sys_ptrace+eip" --keep=1 --user="$USER" --addamb="cap_sys_ptrace" --shell=/usr/bin/gdb --'
alias sort='sort -h'
alias timidity='timidity 2>/dev/null'
alias tree='tree -F'
alias vim='vim -p'
alias wget='wget --content-disposition'
alias which='which -a'

# frequently used
alias f.='vifm .'
alias f=vifm
alias h=htop
alias irc=weechat
alias m=mutt
alias n=newsbeuter
alias se=sudoedit
alias t=task
alias tw='command t'
alias twu='tw update'
alias v='alsamixer -c 0'
alias x=startx

# git
alias ad='git add'
alias bl='git blame -s'
alias br='git branch'
alias ca='git commit --amend'
alias ci='git commit'
alias co='git checkout'
alias di='git diff'
alias dic='git diff --cached'
alias gt='git tag -s'
alias lg='git log --decorate --graph --oneline --no-show-signature'
alias st='git status -sb'
alias sw='git switch'

# ruby
alias ri='ri -af ansi'
alias be='bundle exec '

# systemd
alias journalctl='journalctl -e'
alias reload='sudo systemctl reload'
alias restart='sudo systemctl restart'
alias start='sudo systemctl start'
alias status='systemctl status -l'
alias stop='sudo systemctl stop'

# global aliases
alias -g '\g'='| grep'
alias -g '\h'='| head'
alias -g '\l'='| less'
alias -g '\n'='>/dev/null 2>&1'
alias -g '\t'='| tail'

# suffixes
alias -s exe=wine
