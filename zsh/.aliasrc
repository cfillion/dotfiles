# general aliases
alias weechat=weechat-curses
alias ls='ls --color=auto -v --group-directories-first'
alias grep='grep --color'
alias rm='rm -vI'
alias unp='unp -U'
alias calc='python -ic "from __future__ import division; from math import *; from random import *"'
alias vv='f -e vim'

# shortcuts for frenquently used programs
alias h=htop
alias m=mutt
alias r=ranger
alias v=alsamixer
alias R='builtin r'

# global aliases
alias -g NUL="> /dev/null 2>&1"

# suffixes
alias -s exe=wine

