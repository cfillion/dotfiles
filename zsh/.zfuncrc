# vim: ft=zsh

compress() {
  convert -strip -interlace Plane -quality 85% $*
}

gem2ri() {
  gem rdoc $* --ri --no-rdoc
}

lsfont()
{
  fc-list : family
}

myip() {
  curl curlmyip.com
}

sprunge() {
  curl -F 'sprunge=<-' http://sprunge.us
}

startx() {
  [ $DISPLAY ] && return
  command startx $*
}

topdu() {
  du -sh */ | sort -rh | less -NSFiX
}
