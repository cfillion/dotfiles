# general
alias calc='python -ic "from __future__ import division; from math import *; from random import *"'
alias df='df -Th'
alias grep='grep --color -i'
alias ls='ls -Fhv --color=auto --group-directories-first'
alias rm='rm -vI'
alias vim='vim -p'
alias vv='f -e vim'
alias weechat=weechat-curses

# frenquently used programs
alias c=calcurse
alias h=htop
alias m=mutt
alias r=ranger
alias R='builtin r'
alias v=alsamixer

# systemd
alias status='systemctl status -l'
alias start='sudo systemctl start'
alias restart='sudo systemctl restart'
alias reload='sudo systemctl reload'
alias stop='sudo systemctl stop'

# global aliases
alias -g NUL="> /dev/null 2>&1"

# suffixes
alias -s exe=wine

