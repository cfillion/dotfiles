# vim: ft=zsh

compress() {
  convert -strip -interlace Plane -quality 85% $*
}

gem2ri() {
  gem rdoc $* --ri --no-rdoc
}

lsaur() {
  pacman -Qem
}

lsfont() {
  fc-list : family
}

myip() {
  curl curlmyip.com
}

sprunge() {
  curl -F 'sprunge=<-' http://sprunge.us
}

startx() {
  [ $DISPLAY ] && return
  command startx $*
}

timer() {
  echo "Press ^D to end the timer." >&2
  (time cat > /dev/null) 2>&1 | awk '{print $(NF-1)}'
}

topdu() {
  du -sh */ | sort -rh | less -NSFiX
}
